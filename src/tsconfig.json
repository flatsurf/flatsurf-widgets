{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop":true,
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "outDir": "./lib",
    "resolveJsonModule": true,
    "rootDir": "..",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2015",
    "experimentalDecorators": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
